<div class= "mt-5 ms-5 ps-4 w-75">
  <div class= "border-bottom pb-2 mb-5">
    <h1>
      <%= @restaurant.name %>
    </h1>

    <p>
      <%=
        link_to "Submit a review",
        submit_review_path(@restaurant),
        class: "link-success link-underline-opacity-0 link-underline-opacity-100-hover link-offset-2-hover"
      %>
    </p>
  </div>

  <h3 class="mb-3">
    About the Restaurant
  </h3>

  <div class="card text-bg-light mb-3" style="max-width: 50rem;">
    <div class="card-header">
      <h4 class="m-0">Cuisine: <%= @restaurant.category %></h4>
    </div>
    <div class="card-body">
      <p class="card-title"><%= @restaurant.name %> is located at <%= @restaurant.address %>.</p>
      <p class="card-text">For more information, please contact them at <%= @restaurant.phone_number %>.</p>
    </div>
  </div>

  <h3 class="mt-5 mb-3">
    Reviews
  </h3>

  <div>
  <ul class="list-group">
    <% if @reviews.count >= 1 %>
      <% @reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-center" style="max-width: 50rem;">
          "<%= review.content %>"
          <span>
            <%= "ðŸ‘ðŸ»" * review.rating %>
          </span>
      </li>
      <% end %>
    <% else %>
      There are currently no reviews.
    <% end %>
  </ul>
  </div>

  <p class="border-top pt-2 mt-5">
    <%=
    link_to "Back to restaurants",
    restaurants_path,
    class: "link-success link-underline-opacity-0 link-underline-opacity-100-hover link-offset-2-hover"
    %>
  </p>
</div>
